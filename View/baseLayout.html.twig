<body>
	<br/><br/><br/><br/>
	
	
	<!-- Barre de navigation du haut -->
	
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <h1><a class="navbar-brand" href="/">Forum PHP</a></h1>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          {% if pseudo is defined %}
            <ul class="nav navbar-nav navbar-right">
              <li class="disabled"><a href="#">{{ pseudo.pseudoforum }}</a></li>
              {% if pseudo.admin %}
                <li><a href="/login">Partie Admin</a></li>
              {% endif %}
              <li><a href="/deconnect">DÃ©connexion <i class="icon-remove"></i></a></li>
            </ul>
          {% elseif error is defined %}
            <div class="navbar-form navbar-right row">
              <div class="col-sm-10">
                <form action="/connect" method="post"> 
                  <!-- Login -->
                  <div class="form-group">
                    <input type="text" placeholder="Pseudonyme" name="pseudo" class="form-control">
                  </div>

                  <!-- Mot de passe -->
                  <div class="form-group">
                    <input type="password" placeholder="Mot de passe" name="pwd" class="form-control">
                  </div>

                    <!-- Se connecter -->
                  <input class="btn btn-success" type="submit" value="Se connecter" />
                  <p>{{ error }}</p>
                </form>
              </div>
              <div class="col-sm-2">
                <!-- S'inscrire -->
                <a class="btn btn-success" href="/inscription">S'inscrire</a>
              </div>
            </div>
          {% else %}
            <div class="navbar-form navbar-right row">
              <div class="col-sm-10">
                <form action="/connect" method="post"> 
                  <!-- Login -->
                  <div class="form-group">
                    <input type="text" placeholder="Pseudo" name="pseudo" class="form-control">
                  </div>

                  <!-- Mot de passe -->
                  <div class="form-group">
                    <input type="password" placeholder="Mot de passe" name="pwd" class="form-control">
                  </div>

                    <!-- Se connecter -->
                  <input class="btn btn-success" type="submit" value="Se connecter" />
                </form>
              </div>
              <div class="col-sm-2">
                <!-- S'inscrire -->
                <a class="btn btn-success" href="/inscription">S'inscrire</a>
              </div>
            </div>
          {% endif %}
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

	{% block content %}
	{% endblock %}
	
	{% block script %}
