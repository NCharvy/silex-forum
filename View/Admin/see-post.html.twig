{% extends "tpl-back.html.twig" %}

{% block css %}
    <link href="/web/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/web/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style-admin.css" rel="stylesheet">
{% endblock %}

{% block content %}
<main>
    <h2>Fiche détaillée du post n°{{ post.idRep }}</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-md-offset-3">
                <a class="btn btn-primary" href="{{ referer }}" role="button" style="margin-bottom : 12%;"><i class="icon-circle-arrow-left"></i> Retour</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p><strong>Auteur du post :</strong> {{ post.pseudo }}</p>
                        <p><strong>Sujet relatif au topic :</strong> {{ post.titre|convert_encoding('UTF-8', 'ISO-8859-1') }}</p>
                        <p><strong>Date d'envoi :</strong> {{ post.datePost }}</p>
                        <p><strong>Corps du post :</strong> {{ post.texte|convert_encoding('UTF-8', 'ISO-8859-1') }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</main>
{% endblock %}