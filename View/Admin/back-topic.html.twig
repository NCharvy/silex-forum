{% extends "tpl-back.html.twig" %}

{% block content %}
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <header class="navbar navbar-inverse">
                    <div class="container">
                        <nav id="navbar" class="navbar-collapse collapse">
                            <ul id="nav-admin" class="nav navbar-nav navbar-inverse">
                                <li><a href="/forum-admin">Gestion de posts</a></li>
                                <li><a href="/admin-cat">Gestion de catégories</a></li>
                                <li class="/active"><a href="admin-topic">Gestion de topics</a></li>
                                <li><a href="/admin-user">Gestion d'utilisateurs</a></li>
                            </ul>
                        </nav>
                    </div>
                </header>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <h2>Liste des topics</h2>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Catégorie</th>
                        <th>Créateur</th>
                        <th>Opérations</th>
                    </tr>
                    {% for topic in topics %}
                    <tr>
                        <td>{{ topic.titre }}</td>
                        <td>{{ topic.dateSujet }}</td>
                        <td>{{ topic.nomCat|convert_encoding('UTF-8', 'ISO-8859-1') }}</td>
                        <td>{{ topic.pseudo }}</td>
                        <td class="td-cell-align">
                            <a href={{ "/save-posts/#{topic.idSujet}" }}><i class="icon-save"></i></a> <a href={{ "/admin-topic/up/#{topic.idSujet}" }}><i class="icon-pencil"></i></a> <a href={{ "/topic-delete/#{topic.idSujet}" }}><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</main>
{% endblock %}