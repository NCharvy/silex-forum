{% extends "tpl-back.html.twig" %}

{% block css %}
    <link href="/web/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/web/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style-admin.css" rel="stylesheet">
{% endblock %}

{% block content %}
<main>
	<h2>Création de catégorie</h2>
	<div class="container">
		<div class="row">
			<div class="col-md-3 col-md-offset-3">
				<a class="btn btn-primary" href="{{ referer }}" role="button" style="margin-bottom : 12%;"><i class="icon-circle-arrow-left"></i> Retour</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<form class="form-horizontal" method="post" action="/category-create">
					<div class="form-group">
						<label for="nomCat" class="col-sm-4 control-label">Nom de la catégorie : </label>
						<div class="col-sm-8">
      						<input type="text" class="form-control" id="nomCat" name="nomCat" placeholder="Catégorie...">
    					</div>
					</div>
					<div class="form-group">
						<div class="col-sm-9"></div>
    					<div class="col-sm-2">
      						<button type="submit" class="button-create btn btn-primary">Création</button>
    					</div>
  					</div>
				</form>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
</main>
{% endblock %}